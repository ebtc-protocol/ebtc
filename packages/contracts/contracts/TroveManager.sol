    struct LocalVariables_RedeemCollateralFromTrove {
        bytes32 _troveId;
        uint _maxLUSDamount;
        uint _price;
        bytes32 _upperPartialRedemptionHint;
        bytes32 _lowerPartialRedemptionHint;
        uint _partialRedemptionHintNICR;
